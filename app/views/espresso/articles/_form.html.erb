
<%= f.text_field :title, :class => 'input-xxlarge' %>

<%= f.text_field :slug, :class => 'input-xxlarge', :placeholder => 'leave empty to auto-generate' %>

<%= f.text_field :tag_names, :class => 'input-xxlarge' %>

<%= f.select :section_id, '', @sections.map {|s| [ '/'+s.path, s.id ] }, :include_blank => false %>

<%= f.text_area :body, :rows => 40, :class => 'input-xxlarge' %>

<label for="article_publish" class="checkbox">
  <%= f.check_box :publish, :checked => f.object.published? %>
  <% if f.object.published? && f.object.persisted? %>
    <%= t 'activerecord.attributes.espresso/article.published', :date => I18n.l(f.object.published_at) %>
  <% else %>
    <%= t 'activerecord.attributes.espresso/article.publish' %>
  <% end %>
</label>

