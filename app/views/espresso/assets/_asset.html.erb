<tr>
  <td class="preview">
    <%= small_thumb asset %>
  </td>
  <td><%= link_to asset.title, edit_asset_path(asset) %></td>
  <td> <%= number_to_human_size asset.file_size %> </td>
  <td> <%= l asset.updated_at, :format => :long %> </td>
  <td class="buttons">
    <%= link_to '<i class="icon-trash icon-white"></i> '.html_safe + t('.button.delete'),
                asset, :method => :delete, :class => 'btn btn-mini btn-danger' %>
  </td>
</tr>
