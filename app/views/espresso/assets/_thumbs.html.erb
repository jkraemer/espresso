<ul class="thumbnails">
  <% for asset in @assets %>
  <li class="span2">
    <div class="thumbnail">
      <%= link_to image_tag(asset.file_url(:large_thumb), :alt => asset.title), edit_asset_path(asset) %>
      <h5> <%= asset.title %> </h5>
      <p> <%= number_to_human_size asset.file_size %>
      </p>
    </div>
  </li>
  <% end %>
</ul>
